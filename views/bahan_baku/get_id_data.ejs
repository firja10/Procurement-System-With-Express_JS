                    <div class="page-body">
                        <!-- Basic table card start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>Tambah Data Bahan Baku</h5>
                                <!-- <span>use class <code>table</code> inside table element</span> -->
                                <br> <br>

                                <div class="card-header-right">
                                    <ul class="list-unstyled card-option">
                                        <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                        <li><i class="fa fa-window-maximize full-card"></i></li>
                                        <li><i class="fa fa-minus minimize-card"></i></li>
                                        <li><i class="fa fa-refresh reload-card"></i></li>
                                        <li><i class="fa fa-trash close-card"></i></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-block table-border-style">
                                <div class="table-responsive">
                               


                    
                                    
                                    <form action="/bahan_baku/update/<%= data[0].id %>" method = "POST">

                                        <div class="form-group">
                                            <label for="nama_bahan">Nama Bahan</label>
                                            <input type="text" name="nama_bahan" id="nama_bahan" class = "form-control" value = "<%= data[0].nama_bahan %>">
                                        </div>
                        
                                        
                                        <div class="form-group">
                                            <label for="no_part">Nomor Part</label>
                                            <input type="text" name="no_part" id="no_part" class = "form-control"  value = "<%= data[0].no_part %>">
                                        </div>
                        
                        
                                        <div class="form-group">
                                            <label for="stock">Stok</label>
                                            <input type="number" name="stock" id="stock" class = "form-control" value = "<%= data[0].stock %>">
                                        </div>        
                                        
                                        <div class="form-group">
                                            <button type = "submit" class = "btn btn-primary">Update Data</button>
                                        </div>


                                    </form>



                                </div>
                            </div>
                        </div>
