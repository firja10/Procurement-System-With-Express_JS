        <!-- Page-header end -->
        <div class="pcoded-inner-content">
            <!-- Main-body start -->
            <div class="main-body">
                <div class="page-wrapper">
                    <!-- Page-body start -->
                    <div class="page-body">
                        <!-- Basic table card start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>Tabel Bahan Baku</h5>
                                <!-- <span>use class <code>table</code> inside table element</span> -->
                                <br> <br>
                                <!-- <% if(jabatan == 'store') { %> -->

                                    <% if(jabatan == NULL) { %>
                                <button class = "btn btn-primary" data-target = "#exampleBahanBaku" data-toggle = "modal">Tambah Data</button>
                                <% } else { }%>
                               
                                <div class="card-header-right">
                                    <ul class="list-unstyled card-option">
                                        <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                        <li><i class="fa fa-window-maximize full-card"></i></li>
                                        <li><i class="fa fa-minus minimize-card"></i></li>
                                        <li><i class="fa fa-refresh reload-card"></i></li>
                                        <li><i class="fa fa-trash close-card"></i></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-block table-border-style">
                                <div class="table-responsive">
                                    <table class="table" id="Tables">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Nama Bahan</th>
                                                <th>Nomor Part</th>
                                                <th>Stok</th>

                                                <!-- <% if(jabatan == 'store') { %> -->
                                                <% if(jabatan == NULL) { %>
                                                <th>Aksi</th>
                                                <% } else {} %>

                                            </tr>
                                        </thead>
                                        <tbody>

                                        <% for(var i = 0; i < data.length; i++){ %>
                                            <tr>
                                                <th scope="row"><%=  (i+1)  %></th>
                                                <td><%= data[i].nama_bahan %></td>
                                                <td><%= data[i].no_part %></td>
                                                <!-- <td><%= data[i].stock %></td> -->
                                                <!-- <td><%= data[i].stok %></td> -->
                                                <td><%= data[i].total_stok %></td>


                                                <!-- <% if(jabatan == 'store') { %> -->
                                                
                                                    <% if(jabatan == NULL) { %>
                                                <td> 
                                                    <!-- <a href="" class="btn btn-primary">Edit Data</a> -->

                                                    <!-- <form action="/bahan_baku/getid?_method=GET" method = "get">
                                                        <button type = "submit" class = "btn btn-primary">Edit Data</button>
                                                    </form> -->
                                                    <a href="../bahan_baku/get_id/<%= data[i].id %>" class="btn btn-primary">Edit Data</a>

                                                    <a href="../bahan_baku/delete/<%= data[i].id %>" class="btn btn-danger">Delete Data</a>
                                                    

                                                    <!-- <form action="/bahan_baku/delete/<%= data[i].id %>" method = "get"> 

                                                        <button type = "submit" class = "btn btn-danger mt-3" >Hapus Data</button>

                                                    </form> -->


                                                </td>
                                                <% } else {}  %>


                                            </tr>
                                        <% } %>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- Basic table card end -->
                      
            
                       
                    </div>
                    <!-- Page-body end -->
                </div>
          








